@{
    ViewData["Title"] = "Home Page";
}

<!-- Main Content Section -->
<div class="section text-center" id="home">
    <p>User ID: @ViewData["UserId"]</p>
    <p>User Role: @ViewData["UserRole"]</p>
    <h1 class="display-1" style="font-weight:700">AgriEnergy</h1>
    <br />
    <h1 class="display-6">Welcome @ViewData["UserFirstName"], to your gateway to sustainable agriculture and renewable energy solutions in South Africa.</h1>
</div>

<br />
<br />
<hr />
<br />
<br />

<!-- About Section -->
<div class="section text-center" id="about">
    <h1 class="display-6" style="font-weight:600">What is AgriEnergy Connect?</h1>
    <br />
    <p class="accordion-body" style="font-size:1.4rem">
        Agri-Energy Connect is a visionary initiative aimed at fostering collaboration between the
        agricultural sector and green energy technology providers. Our platform serves as a digital ecosystem
        where farmers, green energy experts, and enthusiasts come together to innovate and promote sustainable practices.
    </p>
</div>

<br />
<br />
<hr />
<br />
<br />

<!-- Features Section -->
<div class="section text-center" id="features">
    <h1 class="display-6" style="font-weight:600">Features</h1>
    <br />
    <div class="row">
        <div class="col-md-4 d-flex">
            <div class="card w-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title" style="color:darkseagreen">Connect</h3>
                    <p class="card-text flex-grow-1" style="font-size:1.4rem">Link up with industry professionals and fellow farmers to share knowledge and resources.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card w-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title" style="color:darkseagreen">Innovate</h3>
                    <p class="card-text flex-grow-1" style="font-size:1.4rem">Access the latest green technologies and sustainable farming practices.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card w-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title" style="color:darkseagreen">Grow</h3>
                    <p class="card-text flex-grow-1" style="font-size:1.4rem">Boost your agricultural productivity while reducing your environmental footprint.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<hr />
<br />
<br />

<!-- Testimonials Section -->
<div class="section text-center" id="testimonials">
    <h1 class="display-6" style="font-weight:600">Testimonials</h1>
    <br />
    <div class="row justify-content-center">
        <div class="col-12 d-flex mb-4">
            <div class="card w-100">
                <div class="card-body">
                    <p class="card-text" style="color: darkseagreen; font-size:1.4rem">"AgriEnergy Connect has revolutionized the way we approach sustainable farming!"</p>
                    <p class="card-text" style="font-weight:600; font-size:1.4rem"> - Farmer John</p>
                </div>
            </div>
        </div>
        <div class="col-12 d-flex mb-4">
            <div class="card w-100">
                <div class="card-body">
                    <p class="card-text" style="color: darkseagreen; font-size:1.4rem">"The best platform for integrating green energy solutions in agriculture."</p>
                    <p class="card-text" style="font-weight:600; font-size:1.4rem">- GreenTech Expert Lisa</p>
                </div>
            </div>
        </div>
        <div class="col-12 d-flex mb-4">
            <div class="card w-100">
                <div class="card-body">
                    <p class="card-text" style="color: darkseagreen; font-size:1.4rem">"A must-have resource for any modern farmer." - AgriBusiness CEO Michael</p>
                    <p class="card-text" style="font-weight:600; font-size:1.4rem">- AgriBusiness CEO Michael</p>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<hr />
<br />
<br />

<!-- Contact Section -->
<div class="section text-center" id="contact">
    <h1 class="display-6" style="font-weight:600">Contact Us</h1>
    <br />
    <p>If you have any questions or need further information, please get in touch with us at <a href="mailto:info@agrienergy.com">info@agrienergy.com</a>.</p>
</div>

