@model Agri_Energy_Connect.Models.FarmerViewModel

<! Middleware View for displaying products -->

<! Check if a model has any products -->
@if (Model.Products.Any())
{
    <! build a component and display for each product -->
    @foreach (var product in Model.Products)
    {
        <div class="col-md-10">
            <div class="card mb-2 shadow-sm">
                <div class="card-body" style="background-color: #cff4fc">
                    <h5 class="card-title" style="font-weight:700; font-size:1.2rem; color:black">@product.Name</h5>
                    <p class="card-text">
                        <strong>Category:</strong> @product.Category<br />
                        <strong>Production Date:</strong> @product.ProductionDate.ToString("yyyy-MM-dd")
                    </p>
                </div>
            </div>
        </div>
    }
}
else
{
    <! diplay alert if no products found -->
    <div class="col-10">
        <div class="alert alert-info text-center" role="alert">
            No products available to display.
        </div>
    </div>
}
